{
  "name": "@codevs/ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist .turbo node_modules",
    "ui-add": "pnpm dlx shadcn-ui add",
    "dev": "tsc",
    "build": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": "./src/*.tsx"
    },
    "./sonner-*": {
      "types": "./dist/src/sonner/*.d.ts",
      "default": "./src/sonner/*.tsx"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@codevs/eslint-config": "workspace:*",
    "@codevs/prettier-config": "workspace:*",
    "@codevs/tailwind-config": "workspace:*",
    "@codevs/tsconfig": "workspace:*",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.427.0",
    "react-hook-form": "^7.53.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@codevs/eslint-config/base",
      "@codevs/eslint-config/react"
    ]
  },
  "prettier": "@codevs/prettier-config"
}
