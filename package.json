{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@codevs/prettier-config": "workspace:^",
    "@turbo/gen": "^2.1.1",
    "@types/react": "^18.3.5",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "native": "cd apps/expo && pnpm run start",
    "web": "cd apps/next && pnpm run next",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "tapup": "turbo run dev -F tapup...",
    "dev": "turbo watch dev",
    "codebility": "turbo run dev -F codebility...",
    "ui-add": "turbo run ui-add",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache"
  },
  "resolutions": {
    "metro": "~0.80.8",
    "metro-resolver": "~0.80.8"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "pnpm@8.11.0",
  "dependencies": {
    "axios": "^1.7.7"
  },
  "prettier": "@codevs/prettier-config"
}
