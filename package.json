{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-native": "^0.73.0",
    "eslint": "^8.21.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "turbo": "^2.0.9",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "native": "cd apps/expo && bun run start",
    "web": "cd apps/next && bun run next",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean"
  },
  "resolutions": {
    "metro": "~0.80.8",
    "metro-resolver": "~0.80.8"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "pnpm@8.11.0"
}
